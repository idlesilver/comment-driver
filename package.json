{
  "name": "comment-driver",
  "displayName": "Comment Driver",
  "description": "Divide your code by sections with styled separators.",
  "version": "0.5.0",
  "publisher": "idlesilver",
  "license": "GPL-3.0",
  "icon": "img/logo_256.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/idlesilver/comment-driver"
  },
  "bugs": {
    "url": "https://github.com/idlesilver/comment-driver/issues"
  },
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "comment",
    "separator",
    "divider",
    "section"
  ],
  "activationEvents": [
    "onCommand:comment-driver.makeSubHeader",
    "onCommand:comment-driver.makeMainHeader",
    "onCommand:comment-driver.insertSolidLine"
  ],
  "contributes": {
    "commands": [
      {
        "command": "comment-driver.makeSubHeader",
        "title": "Comment Driver: Make Subheader"
      },
      {
        "command": "comment-driver.makeMainHeader",
        "title": "Comment Driver: Make Main Header"
      },
      {
        "command": "comment-driver.insertSolidLine",
        "title": "Comment Driver: Insert Solid Line"
      }
    ],
    "keybindings": [
      {
        "command": "comment-driver.makeSubHeader",
        "key": "alt+x",
        "when": "editorTextFocus"
      },
      {
        "command": "comment-driver.makeMainHeader",
        "key": "shift+alt+x",
        "when": "editorTextFocus"
      },
      {
        "command": "comment-driver.insertSolidLine",
        "key": "alt+y",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Comment Driver",
      "properties": {
        "comment-driver.length": {
          "type": "number",
          "default": 80,
          "description": "Set line length for all dividers."
        },
        "comment-driver.shouldLengthIncludeIndent": {
          "type": "boolean",
          "default": false,
          "description": "Set whether the divider will be shrink consider indent size, or will be always fixed length."
        },
        "comment-driver.mainHeaderFiller": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1,
          "default": "-",
          "description": "Set symbol for main header line filling (only one)."
        },
        "comment-driver.mainHeaderHeight": {
          "type": "string",
          "enum": [
            "block",
            "line"
          ],
          "default": "block",
          "description": "Set main header vertical style."
        },
        "comment-driver.mainHeaderAlign": {
          "type": "string",
          "enum": [
            "center",
            "left",
            "right"
          ],
          "default": "center",
          "description": "Set main header text align."
        },
        "comment-driver.mainHeaderTransform": {
          "type": "string",
          "enum": [
            "uppercase",
            "lowercase",
            "titlecase",
            "none"
          ],
          "default": "none",
          "description": "Set main header text transform style."
        },
        "comment-driver.subheaderFiller": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1,
          "default": "-",
          "description": "Set symbol for subheader line filling (only one)."
        },
        "comment-driver.subheaderHeight": {
          "type": "string",
          "enum": [
            "block",
            "line"
          ],
          "default": "line",
          "description": "Set subheader vertical style."
        },
        "comment-driver.subheaderAlign": {
          "type": "string",
          "enum": [
            "center",
            "left",
            "right"
          ],
          "default": "center",
          "description": "Set subheader text align."
        },
        "comment-driver.subheaderTransform": {
          "type": "string",
          "enum": [
            "uppercase",
            "lowercase",
            "titlecase",
            "none"
          ],
          "default": "none",
          "description": "Set subheader text transform style."
        },
        "comment-driver.lineFiller": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1,
          "default": "-",
          "description": "Set symbol for solid line filling."
        },
        "comment-driver.languagesMap": {
          "type": "object",
          "uniqueItems": true,
          "patternProperties": {
            "^[\\w\\-\\.]+$": {
              "type": "array",
              "description": "Name of the language mode given by VSCode",
              "minItems": 1,
              "maxItems": 2,
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "description": "Defines what characters will be used as comment line limiters for special languages. It also overrides the default preset."
        }
      }
    }
  },
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "prettier": "^2.2.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^4.1.2",
    "typescript-tslint-plugin": "^0.3.1",
    "vscode": "^1.1.26"
  }
}
